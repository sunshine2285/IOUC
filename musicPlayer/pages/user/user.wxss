/* pages/user/user.wxss */

.userInfo-container {
  background: url('https://tse2-mm.cn.bing.net/th?id=OIP.eegBqqPkWlrkKCnNKwIDdQHaEo&w=232&h=160&c=7&o=5&dpr=1.25&pid=1.7');
  background-repeat: no-repeat;
  background-size: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  position: relative;
}

.userInfo-container:after {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: inherit;
  filter: blur(5rpx);
  z-index: 0;
}

.userAvatar {
  height: 160rpx;
  width: 160rpx;
  border-radius: 50%;
  background-color: skyblue;
  margin-top: 30rpx;
  z-index: 1;
}

.userName {
  height: 60rpx;
  background: rgba(230, 230, 230, 0.5);
  border-radius: 10rpx;
  z-index: 1;
}

.userName > text {
  height: 60rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  z-index: 1;
}

.userName > button {
  height: 60rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0);
  z-index: 1;
}

.userName > button::after {
  border: none;
}

.movie-container {
  display: flex;
  flex-direction: column;
}

.navbar {
  display: flex;
  justify-content: space-around;
  z-index: 500;
  width: 100%;
  height: 80rpx;
  text-align: center;
  color: #a8a8a8;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #dfdfdf;
}

.navbar-item {
  width: 120rpx;
  height: 79rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.navbar-item-active {
  border-bottom: 5rpx solid #59b6e6;
  color: #59b6e6;
}

.movie-content-wrapper {
  padding-top: 50px;
}

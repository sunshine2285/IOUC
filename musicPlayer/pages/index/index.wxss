/* pages/index/index.wxss */

.search {
  background-color: #f4f4f4;
  text-align: center;
  padding: 10rpx 0;
  margin: 10rpx 30rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
}

.search icon {
  margin-left: 20rpx;
}

.search input {
  justify-self: center;
  width: 80%;
  font-size: 25rpx;
}

.divider {
  box-shadow: 0px 1rpx 1rpx 1rpx #e6e6e6;
  margin: 30rpx 0px;
  margin-bottom: 60rpx;
}
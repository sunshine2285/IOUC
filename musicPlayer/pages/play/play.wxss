/* pages/play/play.wxss */

.song-picture {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 0;
}

.song-picture image {
  width: 450rpx;
  height: 450rpx;
  border-radius: 50%;
  box-shadow: 5rpx 5rpx 10rpx 10rpx #afafaf;
  animation: circle 40s infinite linear;
}

@keyframes circle {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

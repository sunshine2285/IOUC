/**app.wxss**/

.block-header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  position: relative;
}

.block-header-body {
  font-size: 35rpx;
}

.block-header-footer {
  position: absolute;
  display: inline-flex;
  align-items: center;
  right: 15rpx;
  padding: 5rpx;
  color: #919191;
  font-size: 25rpx;
  border-radius: 5rpx;
}

.block-header-footer:active {
  background-color: #e0e0e0;
}

.block-header-footer image {
  width: 30rpx;
  height: 30rpx;
}

.sheet-block {
  margin: 30rpx 0;
}

.sheet-item {
  background-color: #f8f8f8;
  margin: 10rpx 25rpx;
  display: flex;
}

.sheet-item:active {
  background-color: #fdfdfd;
}

.sheet-img {
  height: 250rpx;
  width: 250rpx;
  border-radius: 10rpx;
  background-color: #e6e6e6;
}

.sheet-info {
  width: 430rpx;
  margin-left: 20rpx;
  padding: 30rpx 0;
  display: inline-flex;
  flex-direction: column;
}

.sheet-name {
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.sheet-name image {
  width: 40rpx;
  height: 40rpx;
}

.sheet-songs {
  font-size: 20rpx;
  color: #8f8f8f;
  padding: 10rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.song-block {
  margin: 30rpx 10rpx;
  padding: 0 5rpx;
  border-radius: 10rpx;
}

.song-body {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.song-body-item {
  display: inline-block;
  width: 220rpx;
  height: 325rpx;
  margin: 10rpx;
  padding: 10rpx 0;
  background-color: #f8f8f8;
  border-radius: 10rpx;
}

.song-body-item:active {
  background-color: #fdfdfd;
}

.song-img {
  width: 200rpx;
  height: 200rpx;
  background-color: #e6e6e6;
  margin: 10rpx 10rpx;
  border-radius: 10rpx;
}

.song-name {
  display: block;
  font-size: 30rpx;
  width: 200rpx;
  margin-left: 25rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.song-author {
  display: block;
  margin-left: 25rpx;
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #8f8f8f;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.placehoder {
  height: 120rpx;
  width: 100%;
}

.tabBar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 1010;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.tabBar-item {
  height: 90rpx;
  width: 90rpx;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.tabBar-item > image {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}

.tabBar-item > text {
  color: #adadac;
  font-size: 25rpx;
}

.tabBar-play {
  align-self: flex-end;
  background-color: rgba(255, 255, 255, 0.8);
  height: 135rpx;
  width: 140rpx;
  border-radius: 50%;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tabBar-play > image {
  height: 110rpx;
  width: 110rpx;
  border-radius: 50%;
  animation: circle 35s infinite linear;
}

.tabBar-play > button {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  position: absolute;
  top: 175rpx;
  background-color: rgba(30, 30, 30, 0.4);
}

@keyframes circle {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
